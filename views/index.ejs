<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900 text-white">
    <div class="form p-10">
      <form action="/create" method="post">
        <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none" type="text" placeholder="Title goes here..." name="title">
        <textarea class="block mt-2 px-5 py-2 bg-zinc-800 resize-none w-full rounded-md outline-none" placeholder="Task details goes here..." name="details"></textarea>
        <input class="block mt-2 bg-green-600 px-5 py-2 rounded-md cursor-pointer" type="submit" value="Create Task">
      </form>
    </div>

    <div class="tasks p-10 flex gap-3 flex-wrap">
      <% if (files.length > 0) { %>
        <% files.forEach(val => { %>
          <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
            <h1 class="text-white text-3xl tracking-tight"><%= val %></h1>

            <div class="flex justify-between mt-3">
              <a href="/file/<%= val %>" class="text-blue-500">Read More</a>
              <a href="/edit/<%= val %>" class="text-blue-500">Edit Filename</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-white text-9xl">No tasks yet :(</h3>
      <% } %>
    </div>
  </div>
</body>
</html>
